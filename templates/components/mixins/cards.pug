mixin ad-card-lng(ad_card, m_bottom)
	div.card-cta
		if(m_bottom == "m-bottom" )
			.adver-wrapper--lng.parent-relative(class="adver-outside--"+ m_bottom)
				//- p.ad-card-square__title.sanspro-reg= ad_title
				img(src=ad_card)
		else
			.adver-wrapper--lng.parent-relative
				img(src=ad_card)

