
//- Large Horizontal card

mixin large-horizontal(card_img, img_name, card_title, card_time_updated, bg_color)
	.lg-hr-card.group
		a(href="#").card-cta
			.lg-hr-card__img
				img.image(src=card_img, alt=img_name)
			div(class="lg-hr-card__content bg-" + bg_color)
				h1.sanspro-b.lg-hr-card__heading.card-cta__hover= card_title
				span.sanspro-reg.lg-hr-card__time-info= card_time_updated


