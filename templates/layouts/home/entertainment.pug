				//- 			a(href="#") entertainment
						
				.group.grid-col-full.mtop-m-20.mtop-t-20
					include ../../components/mixins/cards.pug
					+nopic-card("Quality TV has improved Hollywood movies, says Hugh Jackman", "1 hour ago", "light-gray", "entertain-title", "entertain-info")
				.group.grid-col-full.mtop-d-20.mtop-m-20.mtop-t-20
					include ../../components/mixins/cards.pug
					+ad-card-250("Advert")

					+mobile-ad("Mobile Advert")

